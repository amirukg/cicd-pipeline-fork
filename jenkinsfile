pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/amirukg/cicd-pipeline-fork.git'
            }
        }

        stage('Build Application') {
            steps {
                sh 'ls -l ./scripts/'
                sh 'chmod +x ./scripts/build.sh'
                sh './scripts/build.sh'
            }
        }

        stage('Run Tests') {
            steps {
                sh './scripts/test.sh'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t testbuildimage .'
            }
        }

        stage('Push Docker Image') {
            steps {
                // Push Docker image to Docker Hub
                script {
                    def dockerHubCredentials = credentials('amirukg-dockerhub')

                    sh "docker login -u ${dockerHubCredentials.username} -p ${dockerHubCredentials.password} docker.io"
                    sh "docker tag testbuildimage docker.io/amirukg/testbuildimage"
                    sh "docker push docker.io/amirukg/testbuildimage"
                }
            }
        }
    }
}
