pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/amirukg/cicd-pipeline-fork.git'
            }
        }

        stage('Build Application') {
            steps {
                ls -l ./scripts/
                sh './scripts/build.sh'
            }
        }

        stage('Run Tests') {
            steps {
                sh './scripts/test.sh'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t testbuildimage .'
            }
        }

        stage('Push Docker Image') {
            steps {
                // Push Docker image to a registry
                withCredentials([usernamePassword(credentialsId: 'your-registry-credentials-id', usernameVariable: 'REGISTRY_USER', passwordVariable: 'REGISTRY_PASSWORD')]) {
                    sh "docker login -u $REGISTRY_USER -p $REGISTRY_PASSWORD your-container-registry"
                    sh 'docker push testbuildimage'
                }
            }
        }
    }
}
